{
  "name": "platform",
  "version": "5.3.2",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "typecheck": "turbo typecheck",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "translate": "turbo translate",
    "boundaries": "turbo boundaries",
    "bump-deps": "npx npm-check-updates --deep -u -x recharts && pnpm install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design",
    "migrate:dev": "pnpm --filter @repo/database migrate:dev",
    "migrate:dev:up": "pnpm --filter @repo/database migrate:dev:up",
    "migrate:dev:down": "pnpm --filter @repo/database migrate:dev:down",
    "migrate:dev:status": "pnpm --filter @repo/database migrate:dev:status",
    "migrate:prod": "pnpm --filter @repo/database migrate:prod",
    "migrate:prod:up": "pnpm --filter @repo/database migrate:prod:up",
    "migrate:prod:down": "pnpm --filter @repo/database migrate:prod:down",
    "migrate:prod:status": "pnpm --filter @repo/database migrate:prod:status",
    "clean": "git clean -xdf node_modules"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.6",
    "@biomejs/biome": "2.3.8",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.6.3",
    "@types/node": "^24.10.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "ultracite": "6.3.9"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "parse5": "^7.2.1"
    }
  },
  "type": "module"
}
