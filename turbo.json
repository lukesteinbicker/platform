{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DATABASE_URL_DEV",
    "DATABASE_URL_PROD",
    "DATABASE_URL_DEV_ADMIN",
    "DATABASE_URL_PROD_ADMIN",
    "BETTER_AUTH_SECRET",
    "RESEND_TOKEN",
    "RESEND_FROM",
    "RESEND_API_KEY",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_WEB_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_POSTHOG_KEY",
    "NEXT_PUBLIC_POSTHOG_HOST",
    "NEXT_PUBLIC_GA_MEASUREMENT_ID",
    "POLAR_ACCESS_TOKEN",
    "POLAR_WEBHOOK_SECRET",
    "POLAR_SERVER",
    "SVIX_TOKEN",
    "KNOCK_SECRET_API_KEY",
    "NEXT_PUBLIC_KNOCK_API_KEY",
    "NEXT_PUBLIC_KNOCK_FEED_CHANNEL_ID",
    "LANGUINE_PROJECT_ID",
    "OPENAI_API_KEY",
    "NODE_ENV",
    "ANALYZE",
    "NEXT_RUNTIME"
  ],
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "**/generated/**",
        ".react-email/**"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "analyze": {
      "dependsOn": ["^analyze"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "translate": {
      "dependsOn": ["^translate"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  }
}
