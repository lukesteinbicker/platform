{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "**/generated/**",
        ".react-email/**"
      ],
      "env": [
        "DATABASE_URL_*",
        "BETTER_AUTH_SECRET",
        "RESEND_TOKEN",
        "RESEND_FROM",
        "RESEND_API_KEY",
        "NEXT_PUBLIC_*",
        "POLAR_*",
        "SVIX_TOKEN",
        "KNOCK_SECRET_API_KEY",
        "LANGUINE_PROJECT_ID",
        "OPENAI_API_KEY",
        "ANALYZE",
        "NEXT_RUNTIME"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env.local"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "env": []
    },
    "test": {
      "dependsOn": ["^test"],
      "env": [
        "DATABASE_URL_*",
        "BETTER_AUTH_SECRET",
        "NEXT_PUBLIC_*"
      ]
    },
    "analyze": {
      "dependsOn": ["^analyze"],
      "env": ["ANALYZE"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL_*",
        "BETTER_AUTH_SECRET",
        "RESEND_TOKEN",
        "RESEND_FROM",
        "RESEND_API_KEY",
        "NEXT_PUBLIC_*",
        "POLAR_*",
        "SVIX_TOKEN",
        "KNOCK_SECRET_API_KEY",
        "LANGUINE_PROJECT_ID",
        "OPENAI_API_KEY",
        "NEXT_RUNTIME"
      ]
    },
    "translate": {
      "dependsOn": ["^translate"],
      "cache": false,
      "env": ["LANGUINE_PROJECT_ID"]
    },
    "clean": {
      "cache": false,
      "env": []
    },
    "//#clean": {
      "cache": false,
      "env": []
    }
  }
}
